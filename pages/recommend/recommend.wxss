/**index.wxss**/
.movie-main{
	position: relative;
	align-items: center;
	padding: 10px;
}
.post{
	display: flex;
	justify-content: center;
	padding-top: 50%;
	padding-bottom: 100%;
	margin-left: 10px;
	margin-right: 10px;
}
.lunar{
	display: flex;
	text-align: center;
	padding-top: 10rpx;
	padding-bottom: 10rpx;
	justify-content: center;
  font-size: 50rpx;
  line-height:1.4;
	opacity: 0.8;
	color: black;
}
.solar{
	display: flex;
	text-align: center;
	padding-top: 10rpx;
	justify-content: center;
  font-size: 20rpx;
  line-height:1.4;
	opacity: 0.8;
	color: black;
}
.gb{
	display: flex;
	width: 100%;
	flex-direction: row;
	justify-content: space-evenly;
}
.good{
	padding: 10px;
	padding-top: 20px;
	color:salmon ;
	width: 50%;
}
.bad{
	color:#222;
	width: 50%;
	padding: 10px;
	padding-top: 20px;
}
.title{
	display: flex;
	text-align: center;
	padding-top: 10rpx;
	justify-content: center;
  font-size: 70rpx;
  line-height:1.4;
	opacity: 0.8;
	color: black;
}
.publish_date{
	display: flex;
	padding-top: 0%;
	text-align: center;
	justify-content: center;
  font-size: 40rpx;
  line-height:1.4;
	opacity: 0.8;
	color: #333;
}
.overview{
	display: flex;
	text-align: left;
	padding: 8%;
  font-size: 30rpx;
  line-height:1.4;
	opacity: 0.8;
	color: #333;
}
.date{
	display: flex;
	text-align: center;
  font-size: 200rpx;
  line-height:1.4;
	opacity: 0.8;
	color: #333;
}
.loading{
	position: absolute;
	left:50%;
	top:50%;
	width:120rpx;
	height:120rpx;
	margin-left: -60rpx;
	margin-top: -60rpx;
}
.container-inner{
	display: -webkit-flex;
	display: flex;
	flex-direction: column;
	margin-bottom: 10px;
	border:1px solid #333;
	opacity:0;
}
.inner-date{
	flex-grow: 1;
	padding: 15px;
	border-bottom:1px solid #333;
}
.date-year-month{
	padding: 5px;
	text-align: center;
}
.date-year-month text{
	border-bottom:1px solid #333;
}
.year-month{
	padding-right:15px;
}
.date-day{
	text-align: center;
	font-size: 180px;
	font-family: 'Times New Roman', Times, serif;
	font-weight: 600;
	letter-spacing: -5px;
}
.date-show-year{
	color:#777;
	text-align: center;
}
.date-directors{
	text-align: center;
	color:#AAA;
	font-size: 12px;
}
.date-directors text:last-child text{
	display:none;
}
.inner-comment{
	width: 100%;
	padding: 10px;
	font-style: italic;
	color: #666;
}
.inner-comment-right {
	font-size: 30px;
	padding-right: 30px;
	padding-top: 30px;
	color:#888;
	text-align: right;
}
.inner-comment text{
	font-size: 30px;
	color:#888;
}
.inner-movie{
display: -webkit-flex;
display: flex;
padding: 10px;
}
.movie-average{
	font-size:40px;
	line-height:40px;
	letter-spacing: -5px;
	margin-right: 10px;
}
.movie-data-container-inner{
	display: -webkit-flex;
	display: flex;
	flex-direction: column;
	margin-bottom: 10px;
	border:1px solid #444;
	opacity:0;
}
.starview{
	padding-left: 50%;
}
.star{
	width:16px;
	height:16px;
	margin: 2px;
}
.budget{
	padding: 10px;
	padding-left: 50%;

}
.revenue{
	padding: 10px;
	padding-left: 50%;

}